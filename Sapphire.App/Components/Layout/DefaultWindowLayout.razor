<WindowLayout PageTitle="@PageTitle"
              RibbonCenterContent="RibbonCenterContent"
              RibbonRightContent="RibbonRightContent"
              RibbonLeftContent="RibbonLeftContent">
    <ToolbarRightContent>
        <WindowControls/>
    </ToolbarRightContent>
    <ChildContent>
        <MudContainer MaxWidth="ChildContentMaxWidth" Class="my-8">
            @ChildContent
        </MudContainer>
    </ChildContent>
</WindowLayout>

@code {
    [Parameter] public string PageTitle { get; set; } = string.Empty;
    [Parameter] public RenderFragment? RibbonLeftContent { get; set; }
    [Parameter] public RenderFragment? RibbonCenterContent { get; set; }
    [Parameter] public RenderFragment? RibbonRightContent { get; set; }

    [Parameter] public MaxWidth ChildContentMaxWidth { get; set; } = MaxWidth.Large;
    [Parameter] public required RenderFragment? ChildContent { get; set; }
}