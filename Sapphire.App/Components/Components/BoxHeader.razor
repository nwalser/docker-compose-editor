<MudStack Row="true" Class="@(First ? "mb-3" : "mb-3 mt-8")" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
    <MudText Typo="Typo.h3">@Title</MudText>
    
    <MudStack Row="true" Spacing="1">
        @ChildContent
    </MudStack>
</MudStack>


@code {
    [Parameter] public required string Title { get; set; }
    [Parameter] public bool First { get; set; } = false; // todo: implement nicer box header
    [Parameter] public RenderFragment? ChildContent { get; set; }
}